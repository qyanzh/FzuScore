<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/score_rank"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/score_rank_score"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="1000"
            app:layout_constraintBottom_toBottomOf="@+id/score_rank_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/score_rank_name" />

        <TextView
            android:id="@+id/score_rank_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="031702421"
            app:layout_constraintBottom_toBottomOf="@+id/score_rank"
            app:layout_constraintStart_toEndOf="@+id/score_rank"
            app:layout_constraintTop_toTopOf="@+id/score_rank" />

        <TextView
            android:id="@+id/score_rank_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="姓名"
            app:layout_constraintBottom_toBottomOf="@+id/score_rank_number"
            app:layout_constraintStart_toEndOf="@+id/score_rank_number"
            app:layout_constraintTop_toTopOf="@+id/score_rank_number" />
</android.support.constraint.ConstraintLayout>
